{
  "compilerOptions": {
    "target": "es2021",
    "downlevelIteration": true,
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@stories/*": [
        "packages/ag-grid-theme/stories/*",
        "packages/core/stories/*",
        "packages/data-grid/stories/*",
        "packages/icons/stories/*",
        "packages/lab/stories/*",
        "packages/theme/stories/*"
      ]
    },
    "types": ["cypress", "@testing-library/cypress", "node"]
  },
  "include": [
    "packages",
    "integration/toolkit",
    "docs",
    "tooling",
    "cypress",
    "./declarations.d.ts"
  ]
}
